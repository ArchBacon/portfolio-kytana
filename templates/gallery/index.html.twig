{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <div class="grid">
        {% set big_array = [4, 8, 3, 5, 8, 9] %}
        {% set count = 0 %}
        {% set compare = 0 %}

        {% for key, url in images %}
            {% if key == compare %}
                <div class="grid-item span-2">
                    <a href="{{ url }}" target="_blank"><img src="{{ url }}" alt=""></a>
                </div>
                {% set compare = compare + big_array[count] %}
                {% set count = count + 1 %}
            {% else %}
                <div class="grid-item">
                    <a href="{{ url }}" target="_blank"><img src="{{ url }}" alt=""></a>
                </div>
            {% endif %}

            {% if count > 5 %}
                {% set count = 0 %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
